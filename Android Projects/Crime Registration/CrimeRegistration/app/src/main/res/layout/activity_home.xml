<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    tools:context=".HomeActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="130dp"
        android:src="@mipmap/ic_launcher_round"></ImageView>
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/source_help"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#E91E63"
        android:fontFamily="sans-serif-condensedans-serif-condensed-light"></TextView>
    <Button
        android:id="@+id/enter_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter"></Button>
    <TextView
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_matter"></TextView>
    </LinearLayout>

</ScrollView>