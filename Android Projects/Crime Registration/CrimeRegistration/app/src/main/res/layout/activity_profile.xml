<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:background="@drawable/shape"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="serif"></TextView>

        <EditText
            android:id="@+id/name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:maxLength="30"
            android:inputType="textCapWords"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:hint="@string/full_name"

            ></EditText>
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:maxLength="30"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            ></EditText>
        <EditText
            android:inputType="number"
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:maxLength="30"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:hint="@string/age"
            ></EditText>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="number"
                android:id="@+id/aadhar_no"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:maxLength="12"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:hint="@string/pan"
                ></EditText>
            <ImageView
                android:id="@+id/verify_tick"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:visibility="invisible"
                android:src="@drawable/verify_tick"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>


        <Button
            android:id="@+id/verify_aadhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Aadhar"></Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textColor="@android:color/black"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"></TextView>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/rGender"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/e_male"
                android:textSize="20sp"
                android:textColor="#0000FF"
                android:checked="true"
                >
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/t_female"
                android:textSize="20sp"
                android:textColor="#0000FF"
                android:checked="false"
                android:layout_weight="1"
                >
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/t_others"
                android:textSize="20sp"
                android:textColor="#0000FF"
                android:checked="false"
                android:layout_weight="1"
                >
            </RadioButton>
        </RadioGroup>
        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/submit_profile"
            android:text="@string/submit"></Button>

    </LinearLayout>

</RelativeLayout>