<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ViewComplaintFragment">

    <TextView
        android:id="@+id/view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complaint Id : "
        android:padding="10dp"
        android:textColor="#00f"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:text="Category : "
        android:id="@+id/view_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#f00"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complaint by : "
        android:padding="10dp"
        android:textColor="#134900"
        android:gravity="center"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/view_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="At "
        android:padding="10dp"
        android:textColor="#00BCD4"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/view_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location : "
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/view_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress : "
        android:padding="10dp"
        android:textColor="#f0f"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/view_victims"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Victims : "
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/view_add_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Additional Info : "
        android:padding="10dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/status_of_complaint"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Status of Complaint"/>

    <Button
        android:id="@+id/update_progress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Update Progress"/>

</LinearLayout>